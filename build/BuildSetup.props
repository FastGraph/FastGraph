<?xml version="1.0" encoding="utf-8"?>
<Project>
  <Import Project="./DeployBuild.props" />
  <Import Project="./PackagesGeneration.props" />

  <!-- Build variables -->
  <PropertyGroup>
    <UseFastGraphCoreNuget>false</UseFastGraphCoreNuget>
    <UseFastGraphCoreNuget Condition="$(DeployBuild) AND !$(Generate_FastGraph_Core)">true</UseFastGraphCoreNuget>

    <UseFastGraphSerializationNuget>false</UseFastGraphSerializationNuget>
    <UseFastGraphSerializationNuget Condition="$(DeployBuild) AND !$(Generate_FastGraph_Serialization)">true</UseFastGraphSerializationNuget>

    <UseFastGraphGraphvizNuget>false</UseFastGraphGraphvizNuget>
    <UseFastGraphGraphvizNuget Condition="$(DeployBuild) AND !$(Generate_FastGraph_Graphviz)">true</UseFastGraphGraphvizNuget>

    <UseFastGraphDataNuget>false</UseFastGraphDataNuget>
    <UseFastGraphDataNuget Condition="$(DeployBuild) AND !$(Generate_FastGraph_Data)">true</UseFastGraphDataNuget>

    <UseFastGraphMSAGLNuget>false</UseFastGraphMSAGLNuget>
    <UseFastGraphMSAGLNuget Condition="$(DeployBuild) AND !$(Generate_FastGraph_MSAGL)">true</UseFastGraphMSAGLNuget>

    <UseFastGraphPetriNuget>false</UseFastGraphPetriNuget>
    <UseFastGraphPetriNuget Condition="$(DeployBuild) AND !$(Generate_FastGraph_Petri)">true</UseFastGraphPetriNuget>
  </PropertyGroup>
</Project>