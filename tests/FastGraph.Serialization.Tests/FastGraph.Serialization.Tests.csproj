    <PackageReference Include="FastGraph.Serialization" Version="2.3.0" />
  </ItemGroup>
  <ItemGroup Condition="!$(UseFastGraphSerializationNuget)">
    <ProjectReference Include="..\..\src\FastGraph.Serialization\FastGraph.Serialization.csproj" />
