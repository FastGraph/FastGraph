  <ItemGroup Condition="$(UseFastGraphGraphvizNuget)">
    <PackageReference Include="FastGraph.Graphviz" Version="2.3.0" />
  </ItemGroup>
  <ItemGroup Condition="!$(UseFastGraphGraphvizNuget)">
